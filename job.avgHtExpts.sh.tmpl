XAPPLRESDIR=${MCRROOT}/X11/app-defaults ;
export LD_LIBRARY_PATH;
export XAPPLRESDIR;

set -f
./averageHighthroughputExperiments \
  simPathPattern 'output/<TMPL_VAR NAME=timeStamp>/predictions-*.mat' \
  avgValsPath output/<TMPL_VAR NAME=timeStamp>/predictions.mat
